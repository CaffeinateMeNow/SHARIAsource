$("document_document_type_id.select").append(new Option('<%=j @document_type.name %>' , <%= @document_type.id %> ));
<% if @document_type.errors.any? %>
  $("#new_document_type").fadeOut(500, function(){
    $('.alert-box').remove();
    $(this).prepend($("<p class='alert-box alert'><%=j @document_type.errors.full_messages.join('; ') %></p>")).fadeIn(500);
  });
<% else %>
  $("#new_document_type").fadeOut(500, function(){
    $('.alert-box').remove();
    $(this).prepend($('<p class="alert-box"><%=j @document_type.name %> was created successfully</p>')).fadeIn(500);
  });
  $("#new_document_type")[0].reset();
<% end %>
