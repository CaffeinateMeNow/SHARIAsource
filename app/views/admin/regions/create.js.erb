$("document_region_id.select").append(new Option('<%=j @region.name %>' , <%= @region.id %> ));
<% if @region.errors.any? %>
  $("#new_region").fadeOut(500, function(){
    $('.alert-box').remove();
    $(this).prepend($("<p class='alert-box alert'><%=j @region.errors.full_messages.join('; ') %></p>")).fadeIn(500);
  });
<% else %>
  $("#new_region").fadeOut(500, function(){
    $('.alert-box').remove();
    $(this).prepend($('<p class="alert-box"><%=j @region.name %> was created successfully</p>')).fadeIn(500);
  });
  $("#new_region")[0].reset();
<% end %>
